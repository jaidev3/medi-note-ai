# =============================================================================
# CRITICAL: API KEYS & SECRETS (REQUIRED)
# =============================================================================

# OpenAI API Configuration (REQUIRED for SOAP generation and embeddings)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TEMPERATURE=0.1

# HuggingFace API Configuration (REQUIRED for biomedical models)
HUGGINGFACEHUB_API_TOKEN=hf_your-huggingface-token-here
HUGGINGFACE_MODEL_ID=aaditya/Llama3-OpenBioLLM-70B

# Authentication & Security (CHANGE IN PRODUCTION)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL with pgvector (for development)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/echo_note_rag

# Database connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================

# AI Service Connection
AI_SERVICE_URL=http://localhost:8002
AI_SERVICE_TIMEOUT=300

# NER Model Configuration
NER_MODEL_NAME=d4data/biomedical-ner-all

# Model Caching
AI_SERVICE_TRANSFORMERS_CACHE=/app/.cache/huggingface
AI_SERVICE_HF_HOME=/app/.cache/huggingface
AI_SERVICE_TORCH_HOME=/app/.cache/torch

# Performance Settings
AI_SERVICE_MAX_CONCURRENT_REQUESTS=10
AI_SERVICE_REQUEST_TIMEOUT=300

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Next.js Environment
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# CORS & SECURITY
# =============================================================================

# CORS Settings (update for production)
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8001,http://localhost:8002
TRUSTED_HOSTS=localhost,127.0.0.1

# Security Headers
ENABLE_SECURITY_HEADERS=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true

# Debug Mode (NEVER enable in production)
DEBUG=False

# Environment
ENVIRONMENT=development

# =============================================================================
# PERFORMANCE & LIMITS
# =============================================================================

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt

# Document Storage (Local)
DOCUMENTS_STORAGE_PATH=app/data/documents

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_TTL=3600
ENABLE_REDIS_CACHE=false
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
ENABLE_API_DOCS=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=false

# Testing
ENABLE_TEST_ENDPOINTS=false
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/echo_note_test

# =============================================================================
# PRODUCTION OVERRIDES (UNCOMMENT FOR PRODUCTION)
# =============================================================================

# NODE_ENV=production
# DEBUG=False
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# ENABLE_API_DOCS=false
# ENABLE_TEST_ENDPOINTS=false
# JWT_SECRET_KEY=use-a-very-strong-secret-key-here

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env: cp .env.sample .env
# 2. Update all placeholder values with your actual credentials
# 3. Never commit .env files to version control
# 4. Use strong, unique passwords and keys in production
# 5. Regularly rotate API keys and secrets
# 6. Consider using a proper secret management system for production

