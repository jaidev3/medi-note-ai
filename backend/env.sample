# Echo Notes Backend - Environment Variables Sample
# Copy this file to .env and update with your actual values

# Google Gemini Configuration (Required for AI features)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=models/embedding-001
GEMINI_TEMPERATURE=0.1

# SOAP Generation Configuration
SOAP_MAX_RETRIES=3
PII_CONFIDENCE_THRESHOLD=0.5

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/echo_note_rag

# JWT Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt

# CORS Configuration (Optional - defaults to allow all for development)
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# CORS_CREDENTIALS=false
# CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_HEADERS=*

# Trusted Hosts Configuration (Optional)
# TRUSTED_HOSTS=localhost,127.0.0.1,*.localhost

# AWS S3 Configuration (Optional - for document storage)
# Uncomment and set these if you want to use S3 for document storage
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=echo-notes-documents
# S3_ENDPOINT_URL=
