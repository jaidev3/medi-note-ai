# =============================================================================
# BACKEND SERVICE - ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to backend/.env and update with your actual values
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL with pgvector
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/echo_note_rag
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Password Security
BCRYPT_ROUNDS=12

# =============================================================================
# AI SERVICE INTEGRATION
# =============================================================================

# AI Service Connection
AI_SERVICE_URL=http://localhost:8002
AI_SERVICE_TIMEOUT=300

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================

# AWS Credentials
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1

# S3 Configuration
S3_BUCKET_NAME=bucket-of-echo
S3_ENDPOINT_URL=
S3_USE_SSL=true

# =============================================================================
# CORS & SECURITY
# =============================================================================

# CORS Settings
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8001
TRUSTED_HOSTS=localhost,127.0.0.1

# Security Headers
ENABLE_SECURITY_HEADERS=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=False
LOG_LEVEL=INFO

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_UPLOAD=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# API Documentation
ENABLE_API_DOCS=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy to backend/.env: cp backend/.env.sample backend/.env
# 2. Update all placeholder values
# 3. Keep this file in sync with main .env.sample
# 4. Backend service handles: authentication, business logic, database operations