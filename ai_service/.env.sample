# =============================================================================
# AI SERVICE - ENVIRONMENT CONFIGURATION TEMPLATE
# Copy this file to ai_service/.env and update with your actual values
# =============================================================================

# =============================================================================
# CRITICAL: AI API KEYS (REQUIRED)
# =============================================================================

# NOTE: Legacy OpenAI/HuggingFace/NER/cache-related environment variables
# have been removed from configuration. Configure model providers (e.g.
# Gemini) and caching explicitly if required.

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service Connection
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8002
AI_SERVICE_BACKEND_SERVICE_URL=http://localhost:8001

# Performance Settings
AI_SERVICE_MAX_CONCURRENT_REQUESTS=10
AI_SERVICE_REQUEST_TIMEOUT=300
AI_SERVICE_WORKER_THREADS=4

# =============================================================================
# DATABASE ACCESS (SHARED WITH BACKEND)
# =============================================================================

# PostgreSQL with pgvector (for embeddings)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/echo_note_rag

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging Configuration
AI_SERVICE_LOG_LEVEL=INFO
AI_SERVICE_ENABLE_STRUCTURED_LOGGING=true

# Debug Mode
AI_SERVICE_DEBUG=False

# Environment
AI_SERVICE_ENVIRONMENT=development

# =============================================================================
# SOAP GENERATION SETTINGS
# =============================================================================

# SOAP Generation Configuration
AI_SERVICE_SOAP_MAX_RETRIES=3
AI_SERVICE_SOAP_RETRY_DELAY=2
AI_SERVICE_ENABLE_JUDGE_LLM=true

# =============================================================================
# PII DETECTION SETTINGS
# =============================================================================

# PII Detection Configuration
AI_SERVICE_PII_CONFIDENCE_THRESHOLD=0.7
AI_SERVICE_PRESERVE_MEDICAL_CONTEXT=true

# =============================================================================
# NER EXTRACTION SETTINGS
# =============================================================================

# NER Configuration
AI_SERVICE_NER_CONFIDENCE_THRESHOLD=0.5
AI_SERVICE_NER_MAX_ENTITIES=100

# =============================================================================
# EMBEDDINGS SETTINGS
# =============================================================================

# Embedding Configuration
AI_SERVICE_EMBEDDING_BATCH_SIZE=50
AI_SERVICE_EMBEDDING_MAX_LENGTH=8192

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy to ai_service/.env: cp ai_service/.env.sample ai_service/.env
# 2. Update all AI_SERVICE_* prefixed variables
# 3. This service handles: SOAP generation, NER, PII detection, embeddings
# 4. Requires significant memory for AI models (4GB+ recommended)
# 5. Model downloads happen on first startup (can take 10-15 minutes)
